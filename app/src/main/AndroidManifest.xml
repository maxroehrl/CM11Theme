<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.max.theme.aurora"
    android:installLocation="internalOnly">

    <uses-feature android:name="org.cyanogenmod.theme"
        android:required="true" />

    <meta-data android:name="org.cyanogenmod.theme.name"
        android:value="@string/theme_name" />

    <meta-data android:name="org.cyanogenmod.theme.author"
        android:value="@string/author" />

    <meta-data android:name="org.cyanogenmod.theme.email"
        android:value="@string/theme_email" />

    <application
        android:allowBackup="true"
        android:hasCode="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" />
</manifest>