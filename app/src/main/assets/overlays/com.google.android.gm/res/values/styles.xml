<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UnifiedEmailTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="PlainUnifiedEmailTheme"  parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="ComposeTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@*common:color/blue</item>
        <item name="android:titleTextStyle">@style/TitleText</item>
        <item name="android:subtitleTextStyle">@style/SubTitleText</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubTitleText" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
         <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
          <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>
</resources>